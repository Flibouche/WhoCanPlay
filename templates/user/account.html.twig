{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}

<div class="w-full">
    <h1 class="text-3xl text-black dark:text-white font-raleway font-bold pr-3">My profile</h1>
    <hr class="my-3 w-full border-t-2 border-amber-800 dark:border-yellow-200" />

    <div class="flex flex-col md:flex-row w-full gap-[20px]">

        {# Section secondaire #}
        <aside id="secondary" class="basis-0 min-w-[100%] sm:min-w-[20%] sm:basis-3/12 pr-5">
            <div id="settings" class="relative bg-white dark:bg-neutral-800 flex flex-col mb-5 rounded-xl px-5 py-5 text-black dark:text-white shadow-[rgba(50,50,93,0.25)_0px_6px_12px_-2px,_rgba(0,0,0,0.3)_0px_3px_7px_-3px]">
                <h3 class=""><a href="{{ path('app_user')}}">General</a></h3>
                <h3 class=""><a href="{{ path('app_user_account')}}">Account</a></h3>
                <h3 class=""><a href="{{ path('app_user_submitted_features')}}">Submitted Features</a></h3>
                <h3 class=""><a href="{{ path('app_user_profile', {'pseudo' : app.user.pseudo }) }}">My public profile</a></h3>
            </div>
        </aside>

        {# Section principale #}
        <section id="primary" class="basis-0 min-w-[80%] max-w-[50rem] pr-5">
            <div class="w-full rounded-lg bg-white dark:bg-neutral-800 shadow-[rgba(50,50,93,0.25)_0px_6px_12px_-2px,_rgba(0,0,0,0.3)_0px_3px_7px_-3px]">
                <div class="p-6">
                    <h2 class="text-2xl font-bold text-black dark:text-white mb-4">Account</h2>
            
                    {% if app.user.isGoogleUser == false %}
                    {{ form_start(formEditPassword) }}
            
                    <div class="mb-4">
                        <div class="flex justify-between">
                            {{ form_label(formEditPassword.oldPassword, 'Current Password <span class="text-red-500">*</span>', {'label_html': true, 'label_attr': {'class': 'font-bold text-black dark:text-white'}}) }}
                            <svg id="show-old-password" class="cursor-pointer w-5 h-5 mr-2 fill-black dark:fill-white hover:fill-indigo-800 dark:hover:fill-indigo-200" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512">
                                <path d="M288 32c-80.8 0-145.5 36.8-192.6 80.6C48.6 156 17.3 208 2.5 243.7c-3.3 7.9-3.3 16.7 0 24.6C17.3 304 48.6 356 95.4 399.4C142.5 443.2 207.2 480 288 480s145.5-36.8 192.6-80.6c46.8-43.5 78.1-95.4 93-131.1c3.3-7.9 3.3-16.7 0-24.6c-14.9-35.7-46.2-87.7-93-131.1C433.5 68.8 368.8 32 288 32zM144 256a144 144 0 1 1 288 0 144 144 0 1 1 -288 0zm144-64c0 35.3-28.7 64-64 64c-7.1 0-13.9-1.2-20.3-3.3c-5.5-1.8-11.9 1.6-11.7 7.4c.3 6.9 1.3 13.8 3.2 20.7c13.7 51.2 66.4 81.6 117.6 67.9s81.6-66.4 67.9-117.6c-11.1-41.5-47.8-69.4-88.6-71.1c-5.8-.2-9.2 6.1-7.4 11.7c2.1 6.4 3.3 13.2 3.3 20.3z"/>
                            </svg>
                        </div>
                        {{ form_widget(formEditPassword.oldPassword, {'attr': {'class': 'w-full px-5 py-4 text-black/80 rounded-lg mt-2 bg-neutral-200 dark:bg-zinc-700 border border-gray-300 text-black dark:text-white', 'placeholder': 'Enter your current password'}}) }}
                        <div class="text-red-500">
                            {{ form_errors(formEditPassword.oldPassword) }}
                        </div>
                    </div>
            
                    <div class="mb-4">
                        <div class="flex justify-between">
                            {{ form_label(formEditPassword.plainPassword.first, 'New Password <span class="text-red-500">*</span>', {'label_html': true, 'label_attr': {'class': 'font-bold text-black dark:text-white'}}) }}
                            <svg id="show-new-password" class="cursor-pointer w-5 h-5 mr-2 fill-black dark:fill-white hover:fill-indigo-800 dark:hover:fill-indigo-200" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512">
                                <path d="M288 32c-80.8 0-145.5 36.8-192.6 80.6C48.6 156 17.3 208 2.5 243.7c-3.3 7.9-3.3 16.7 0 24.6C17.3 304 48.6 356 95.4 399.4C142.5 443.2 207.2 480 288 480s145.5-36.8 192.6-80.6c46.8-43.5 78.1-95.4 93-131.1c3.3-7.9 3.3-16.7 0-24.6c-14.9-35.7-46.2-87.7-93-131.1C433.5 68.8 368.8 32 288 32zM144 256a144 144 0 1 1 288 0 144 144 0 1 1 -288 0zm144-64c0 35.3-28.7 64-64 64c-7.1 0-13.9-1.2-20.3-3.3c-5.5-1.8-11.9 1.6-11.7 7.4c.3 6.9 1.3 13.8 3.2 20.7c13.7 51.2 66.4 81.6 117.6 67.9s81.6-66.4 67.9-117.6c-11.1-41.5-47.8-69.4-88.6-71.1c-5.8-.2-9.2 6.1-7.4 11.7c2.1 6.4 3.3 13.2 3.3 20.3z"/>
                            </svg>
                        </div>
                        {{ form_widget(formEditPassword.plainPassword.first, {'attr': {'class': 'w-full px-5 py-4 text-black/80 rounded-lg mt-2 bg-neutral-200 dark:bg-zinc-700 border border-gray-300 text-black dark:text-white', 'placeholder': 'Enter your new password'}}) }}
                        <div class="text-red-500">
                            {{ form_errors(formEditPassword.plainPassword.first) }}
                        </div>
                    </div>
            
                    <div class="mb-4">
                        <div class="flex justify-between">
                            {{ form_label(formEditPassword.plainPassword.second, 'Confirm New Password <span class="text-red-500">*</span>', {'label_html': true, 'label_attr': {'class': 'font-bold text-black dark:text-white'}}) }}
                            <svg id="show-confirm-new-password" class="cursor-pointer w-5 h-5 mr-2 fill-black dark:fill-white hover:fill-indigo-800 dark:hover:fill-indigo-200" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512">
                                <path d="M288 32c-80.8 0-145.5 36.8-192.6 80.6C48.6 156 17.3 208 2.5 243.7c-3.3 7.9-3.3 16.7 0 24.6C17.3 304 48.6 356 95.4 399.4C142.5 443.2 207.2 480 288 480s145.5-36.8 192.6-80.6c46.8-43.5 78.1-95.4 93-131.1c3.3-7.9 3.3-16.7 0-24.6c-14.9-35.7-46.2-87.7-93-131.1C433.5 68.8 368.8 32 288 32zM144 256a144 144 0 1 1 288 0 144 144 0 1 1 -288 0zm144-64c0 35.3-28.7 64-64 64c-7.1 0-13.9-1.2-20.3-3.3c-5.5-1.8-11.9 1.6-11.7 7.4c.3 6.9 1.3 13.8 3.2 20.7c13.7 51.2 66.4 81.6 117.6 67.9s81.6-66.4 67.9-117.6c-11.1-41.5-47.8-69.4-88.6-71.1c-5.8-.2-9.2 6.1-7.4 11.7c2.1 6.4 3.3 13.2 3.3 20.3z"/>
                            </svg>
                        </div>
                        {{ form_widget(formEditPassword.plainPassword.second, {'attr': {'class': 'w-full px-5 py-4 text-black/80 rounded-lg mt-2 bg-neutral-200 dark:bg-zinc-700 border border-gray-300 text-black dark:text-white', 'placeholder': 'Confirm your new password'}}) }}
                        <div class="text-red-500">
                            {{ form_errors(formEditPassword.plainPassword.second) }}
                        </div>
                    </div>
            
                    <button type="submit" class="w-full my-2 text-white dark:text-black bg-indigo-800 hover:bg-indigo-600 focus:ring-4 focus:outline-none focus:ring-indigo-800 dark:bg-indigo-200 dark:hover:bg-indigo-400 dark:focus:ring-indigo-200 font-medium rounded-lg text-sm px-5 py-2.5 text-center">Update Password</button>
                    {{ form_end(formEditPassword) }}
                    {% endif %}

                    <button type="submit" class="w-full my-2 text-white dark:text-black bg-red-500 hover:bg-transparent focus:ring-4 focus:outline-none focus:ring-indigo-800 dark:bg-indigo-200 dark:hover:bg-indigo-400 dark:focus:ring-indigo-200 font-medium rounded-lg text-sm px-5 py-2.5 text-center"><a href="{{ path('app_user_delete_account') }}">Delete account</a></button>
                </div>
            </div>
        </section>
        
    </div>
    
</div>

{% endblock %}