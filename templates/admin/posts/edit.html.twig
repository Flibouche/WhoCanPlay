{% extends 'admin/_base.html.twig' %}

{% block title %}Edit Post N°{{ post.id }}{% endblock %}

{% block bodyAdmin %}

{% include 'includes/_flash_messages.html.twig' %}

<h1 class="text-3xl text-black dark:text-white font-raleway font-bold">Edit Post N°{{ post.id }}</h1>
<hr class="my-3 w-[100%] border-t-2 border-amber-800 dark:border-yellow-200" />
<div class="rounded-lg bg-white dark:bg-neutral-800 shadow-[rgba(50,50,93,0.25)_0px_6px_12px_-2px,_rgba(0,0,0,0.3)_0px_3px_7px_-3px]">
    <div class="p-6">
        {{ form_start(formEditPost) }}

        <div class="mb-4">
            {{ form_label(formEditPost.content, 'Content <span class="text-red-500">*</span>', {'label_html': true, 'label_attr': {'class': 'font-bold text-black dark:text-white'}}) }}
            {{ form_widget(formEditPost.content, {'attr': {'class': 'w-full px-5 py-4 text-black/80 rounded-lg mt-2 bg-neutral-200 dark:bg-zinc-700 border border-gray-300 text-black dark:text-white', 'placeholder': 'Enter content'}}) }}
            <div class="text-red-500">
                {{ form_errors(formEditPost.content) }}
            </div>
        </div>

        {{ form_widget(formEditPost.submit, {'attr': {'class': 'w-full text-white dark:text-black bg-indigo-800 hover:bg-indigo-600 focus:ring-4 focus:outline-none focus:ring-indigo-800 dark:bg-indigo-200 dark:hover:bg-indigo-400 dark:focus:ring-indigo-200 font-medium rounded-lg text-sm px-5 py-2.5 text-center'}}) }}

        {{ form_end(formEditPost) }}
    </div>
</div>
{% endblock %}