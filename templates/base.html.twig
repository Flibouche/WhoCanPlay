    {% block javascripts %}
    {# Jquery #}
    {# TinyMCE #}
    <script src="{{ asset('js/tinymce/tinymce.min.js') }}"></script>
    <script defer>
        tinymce.init({
            selector: 'textarea.tinymce'
        });
    </script>
    {# AJAX #}
    {# DATATABLES #}

    {% block importmap %}
    {{ importmap('app') }}
    {% endblock %}

    {#
    <script src="{{ asset('js/ajax.js') }}"></script> #}
    <script src="{{ asset('js/script.js') }}"></script>

    {% endblock %}

</body>

</html>