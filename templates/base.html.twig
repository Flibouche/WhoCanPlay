                </section>
                {# Footer menu #}
                <nav aria-label="Footer menu" class="md:col-span-1">
                    <div>
                        <h2 class="text-white font-bold">Pages</h2>
                        <ul class="text-white">
                            <li class="mt-[15px]"><a href="{{ path('app_sitemap') }}" class="hover:underline">Site Map</a></li>
                            <li class="mt-[15px]"><a href="{{ path('app_help') }}" class="hover:underline">Help</a></li>
                            <li class="mt-[15px]"><a href="{{ path('app_contact') }}" class="hover:underline">Contact</a></li>
                            <li class="mt-[15px]"><a href="{{ path('app_accessibility_statement') }}" class="hover:underline">Accessibility Statement</a>
                            <li class="mt-[15px]"><a href="{{ path('app_terms_and_conditions') }}" class="hover:underline">Terms & Conditions</a></li>
                            <li class="mt-[15px]"><a href="{{ path('app_privacy_policy') }}" class="hover:underline">Privacy Policy</a></li>
                            </li>
                        </ul>
                    </div>
                </nav>
                {# Newsletter #}
                <section class="md:col-span-1">
                    <h2 class="text-white font-bold">Newsletter</h2>
                    <form class="mt-4 flex flex-col gap-4">
                        <label for="email" class="sr-only">Email address</label>
                        <input type="email" id="email" name="email" class="py-3 px-6 h-14 border border-gray-300 shadow-sm rounded-full focus:outline-none" placeholder="Enter your email.." required>
                        <button type="submit" class="h-14 py-3.5 px-7 bg-indigo-800 hover:bg-indigo-200 shadow-sm rounded-full text-white hover:text-black font-bold">Subscribe</button>
