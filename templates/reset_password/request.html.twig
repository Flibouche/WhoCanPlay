{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
{% for flash_error in app.flashes('reset_password_error') %}
<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
{% endfor %}

<div class="w-full sm:max-w-md rounded-lg bg-white dark:bg-neutral-800 shadow-[rgba(50,50,93,0.25)_0px_6px_12px_-2px,_rgba(0,0,0,0.3)_0px_3px_7px_-3px]">

    <div class="p-6">

        <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white mb-2">Reset your password</h1>

        {{ form_start(requestForm) }}

        <div class="mb-2">
            {{ form_label(requestForm.email, 'Email <span class="text-red-500">*</span>', {'label_html': true, 'label_attr': {'class': 'font-bold text-black dark:text-white'}}) }}
            {{ form_widget(requestForm.email, {'attr': {'class': 'w-full px-5 py-4 text-black/80 rounded-lg mt-2 bg-neutral-200 dark:bg-zinc-700 border border-gray-300 text-black dark:text-white', 'placeholder': 'Enter your email'}}) }}
            <div class="text-red-500">
                {{ form_errors(requestForm.email) }}
            </div>
        </div>
        
        <div class="mb-2">
            <small class="text-gray-500 dark:text-gray-400">
                We will send you a link to reset your password.
            </small>
        </div>

        <button type="submit" class="w-full my-2 text-white dark:text-black bg-indigo-800 hover:bg-indigo-600 focus:ring-4 focus:outline-none focus:ring-indigo-800 dark:bg-indigo-200 dark:hover:bg-indigo-400 dark:focus:ring-indigo-200 font-medium rounded-lg text-sm px-5 py-2.5 text-center">Send password reset email</button>
        {{ form_end(requestForm) }}

    </div>

</div>
{% endblock %}
