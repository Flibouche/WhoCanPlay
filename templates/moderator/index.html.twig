                    <td class="px-6 py-4">{{ feature.game ? 'Yes' : 'No' }}</td>
                    <td class="px-6 py-4">{{ feature.state.value }}</td>
                    <td class="px-6 py-4"><img src="{{ feature.disability.icon }}" alt="{{ feature.disability.name }}" title="{{ feature.disability.name }}" width="25" height="25" class="dark:invert dark:brightness-0 dark:filter"></td>
